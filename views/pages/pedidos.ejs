<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="d-flex flex-column bg-light">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main class="d-flex justify-content-center my-auto">

        <div class="card w-50 shadow py-3 px-5 text-center border-0">
            <h3 class="mt-3 mb-4"><i class="fa-solid fa-cart-shopping me-1"></i> Pedidos Cadastrados</h3>

            <table class="table table-striped table-bordered">
                <thead>
                    <th>ID</th>
                    <th>Cliente</th>
                    <th>Produto</th>
                    <th>Valor (R$)</th>
                    <th>Cobran√ßa</th>
                    <th>PDF</th>
                </thead>
                <tbody>
                    <% pedidos.forEach( (pedido) => { %>
                        <tr>
                            <td><%= pedido.id %></td>
                            <td><%= pedido.cliente %></td>
                            <td><%= pedido.produto %></td>
                            <td><%= pedido.valor %></td>
                            <td>
                                <a href="<%= pedido.link_cobranca %>" class="link-underline link-underline-opacity-0">Acessar</a>
                            </td>
                            <td>
                                <a href="<%= pedido.pdf %>" class="link-underline link-underline-opacity-0">Acessar</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        
    </main>
    
    <footer class="mt-auto">
        <%- include('../partials/footer'); %>
    </footer>
    
</body>

</html>